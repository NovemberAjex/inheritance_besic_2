class store_sale():
    def __init__(self,item_name,item_quantity,item_retail_price,item_sale_price,item_sales):
        self.item_name = item_name
        self.item_quantity = item_quantity
        self.item_retail_price = item_retail_price
        self.item_sale_price = item_sale_price
        self.item_sales = item_sales
    def sales(self):
        print(f"total sales of {self.item_name} are {self.item_sales} ")
        print("The total price of sales are ",self.item_sale_price * self.item_sales)
    def discount(self):
        self.total_discount = ((self.item_sale_price*self.item_sales)/100)*15
        print("The total discount on your product is ", self.total_discount)
        print("The total price of items after discount is ", (self.item_sale_price*self.item_sales)-self.total_discount)

    def items_left(self):
        print(f"The total {self.item_name} left are  ", self.item_quantity-self.item_sales)

class store_shopping(store_sale):
    def __int__(self,item_name,item_quantity,item_retail_price,item_sale_price,selller_name,seller_price_pay):
        store_sale.__init__(item_name,item_quantity,item_retail_price,item_sale_price)
        self.seller_name = selller_name
        self.seller_price_pay = seller_price_pay
    def items_buy(self):
         pass
if __name__ == '__main__':

    t1  =store_sale("phone",8,25000,27000,2)
    t1.sales()
    t1.discount()
    t2 = store_sale("charger",6,500,300,3)
    t2.sales()
    t2.discount()
    t2.items_left()
